mode: 1
# This line is a comment.

# release single key
F1:a
F2:b

# release combinational
F1+F2:y
F1+F2:z

# release sequential
F1>F3: ctrl+g
S1>A1>A2:g,i,t,space,c,o,m,m,i,t

# release hybrid
A1|F1|F1: "Obrigado."

# direct single key
.A1:mouse_up
.A3:mouse_down
.A4:mouse_left
.A2:mouse_right

# direct sequential
.S4>.S3:single_quote
.S3>.S3:double_quote

mode:2
F1>F2>A1+A2:y

F1>F2>
  A1+A2
<

A1+A2>A3+A4:y

A1+A2>
  A3+A4
<

A1>A2+F4>A3:v
.A1>A2+F4>.A3:f

S1+S2+
  A1:a
  A2:b
  A1+A2:c
+

# Invalid syntax
.F1+.F2:y  # direct combination
F1+F1      # combine the same buttons
