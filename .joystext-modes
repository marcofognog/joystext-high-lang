mode: 1
# This line is a comment.

# release single key
F1:a
F2:b

# release combinational
F1+F2:y
F1+F2:z

# release sequential
F1>F3: ctrl+g
S1>A1>A2:g,i,t,space,c,o,m,m,i,t

# release hybrid
A1|F1|F1: "Obrigado."

# direct single key
.A1:mouse_up
.A3:mouse_down
.A4:mouse_left
.A2:mouse_right

# direct sequential
.S4>.S3:single_quote
.S3>.S3:double_quote

mode:2
F1:z

S4 {
  .A1:scroll_up
  .A3:scroll_down
  F1+F2:b
}

